---
import Layout from "@/layouts/Layout.astro";


---
<head>
    <script src="https://unpkg.com/htmx.org@1.9.3"></script>
</head>
<Layout
title="Contact Me" description="Contact Page"
>
<div class="max-w-lg mx-auto my-20 p-6 bg-gray-900 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold text-center mb-6">Formulario de Contacto</h1>
    <form id="contact-form" hx-post="http://localhost:8080/send-email" hx-target="#response" hx-swap="innerHTML">
        <div class="mb-4">
            <label for="name" class="block text-sm font-medium">Nombre</label>
            <input type="text" id="name" name="name" required class="mt-1 block w-full p-3 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring focus:ring-blue-500">
        </div>
        <div class="mb-4">
            <label for="email" class="block text-sm font-medium">Correo Electr√≥nico</label>
            <input type="email" id="email" name="email" required class="mt-1 block w-full p-3 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring focus:ring-blue-500">
        </div>
        <div class="mb-4">
            <label for="message" class="block text-sm font-medium">Mensaje</label>
            <textarea id="message" name="message" rows="4" required class="mt-1 block w-full p-3 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring focus:ring-blue-500"></textarea>
        </div>
        <button type="submit" class="w-full p-3 bg-blue-600 hover:bg-blue-700 rounded-md font-bold transition duration-200">Enviar</button>
    </form>
    <div id="response" class="mt-4 text-center"></div>
</div>

</body>
</Layout>